@page
@model NET_Projekt.Pages.Recipes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Przepisy</h1>

<p>
    <a class="btn btn-info" asp-page="Create">Nowy Przepis</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Recipe[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe[0].IngredientsList)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe[0].PublicationDate)
            </th>

            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Recipe) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IngredientsList)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublicationDate)
            </td>
            
            <td>
                <a asp-page="../CategoryRecipes/Create" asp-route-id="@item.Id" asp-route-name="@item.Name">Dodaj do Kategorii</a> |
                <a asp-page="../CategoryRecipes/Index" asp-route-id="@item.Id">Usuń Z Kategorii</a> |
                <a asp-page="./Edit" asp-route-id="@item.Id">Edytuj</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Szczegóły</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
