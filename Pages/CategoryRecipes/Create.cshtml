@page
@model NET_Projekt.Pages.CategoryRecipes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CategoryRecipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryRecipe.Category.Name" class="control-label"></label>
                <select asp-for="CategoryRecipe.CategoryID" class="form-control" asp-items="ViewBag.CategoryID"></select>                               
            </div>
            <div class="form-group">
                <label asp-for="CategoryRecipe.Recipe.Name" class="control-label"></label>
                <input class="form-control" placeholder="@Model.name" readonly />
                <input asp-for="CategoryRecipe.RecipeID" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Recipes/Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
